{
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.75,
    "debug.console.fontSize": 16,
    "debug.showSubSessionsInToolBar": true,
    "dev.containers.defaultExtensions": [
      "bierner.github-markdown-preview",
      "ckolkman.vscode-postgres",
      "danprince.vsnetrw",
      "gitHub.copilot",
      "grapecity.gc-excelviewer",
      "iuriibarlukov.cursor-column-highlight",
      "ms-ossdata.vscode-postgresql",
      "oderwat.indent-rainbow",
      "oracle.oracledevtools", // this can go away after EPACT migration completes
      "waderyan.gitblame",
    ],
    // "editor.formatOnSave": true,
    "editor.acceptSuggestionOnTab": "off",
    "editor.cursorSurroundingLines": 6,
    "editor.fontFamily": "Operator Mono Ssm Lig",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.fontSize": 16,
    "editor.fontVariations": true,
    "editor.lightbulb.experimental.showAiIcon": "on",
    "editor.tabSize": 2,
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.suggest.preview": true,
    "editor.rulers": [
        80
    ],
    "editor.tabCompletion": "on",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              //following will be in italic (=FlottFlott)
              "comment",
              "entity.name.type.class", //class names
              "keyword", //import, export, return…
              "constant", //String, Number, Boolean…, this, super
              "storage.modifier", //static keyword
              "storage.type.class.js", //class keyword
              "entity.name.tag.html", // html tags
            ],
            "settings": {
              "fontStyle": "italic"
            }
          },
          // {
          //   "scope": [
          //     //following will be excluded from italics (VSCode has some defaults for italics)
          //     "invalid",
          //     "keyword.operator",
          //     "constant.numeric.css",
          //     "keyword.other.unit.px.css",
          //     "constant.numeric.decimal.js",
          //     "constant.numeric.json"
          //   ],
          //   "settings": {
          //     "fontStyle": ""
          //   }
          // }
        ]
    },
    "emmet.includeLanguages": {
        "erb": "html",
        "html": "html"
    },
    "emmet.showSuggestionsAsSnippets": true,
    "extensions.experimental.affinity": {
      "asvetliakov.vscode-neovim": 1
    },
    "files.autoSave": "onFocusChange",
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "githubPullRequests.pullBranch": "never",
    "github-actions.use-enterprise": true,
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 3,
    "Lua.workspace.library": [
      "/path/to/PlaydateSDK/CoreLibs"
    ],
    "Lua.runtime.nonstandardSymbol": [
      "+=",
      "-=",
      "*=",
      "/="
    ],
    "open-in-browser.default": "Safari",
    "remote.autoForwardPortsSource": "hybrid",
    "[ruby]": {
        "editor.defaultFormatter": "testdouble.vscode-standard-ruby",
        "editor.formatOnType": true,
        "editor.formatOnSave": false,
        "files.insertFinalNewline": true,
        "editor.insertSpaces": true,
        "editor.rulers": [
          120
        ],
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.trimFinalNewlines": true,
    },
    // "standardRuby.autofix": true,
    // currently not using ruby-lsp, but keeping the settings for future use
    "rubyLsp.enableExperimentalFeatures": true,
    "rubyLsp.formatter": "standard",
    "rubyLsp.enabledFeatures": {
        "codeActions": true,
        "codeLens": true,
        "completion": true,
        "definition": true,
        "diagnostics": true,
        "documentHighlights": true,
        "documentLink": true,
        "documentSymbols": true,
        "foldingRanges": true,
        "formatting": true,
        "hover": true,
        "inlayHint": true,
        "onTypeFormatting": true,
        "selectionRanges": true,
        "semanticHighlighting": true,
        "workspaceSymbol": true
    },
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.suggestEnabled": true,
    "terminal.integrated.stickyScroll.enabled": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // marked for deletion. the neovim plugin seems pretty stable now
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["-"],
        "commands": ["vsnetrw.open"],
        "when": "editorLangId != vsnetrw"
      },
      {
        "before": ["j"],
        "after": ["g", "j"]
      },
      {
        "before": ["k"],
        "after": ["g", "k"]
      },
      // shift + k to trigger hover and focus hover in normal mode
      {
        "before": ["K"],
        "commands": ["editor.action.showHover"],
      },
      {
        "before": ["<"],
        "commands": ["editor.action.outdentLines", "extension.vim_escape"],
        "after": ["v", "gv"]
      },
      {
        "before": [">"],
        "commands": ["editor.action.indentLines", "extension.vim_escape"],
        "after": ["v", "gv"]
      },
      {
        "before": ["<CR>"],
        "commands": [":nohlsearch"]
      }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
      {
        "before": ["<"],
        "commands": ["editor.action.outdentLines"],
        "after": ["gv"]
      },
      {
        "before": [">"],
        "commands": ["editor.action.indentLines"],
        "after": ["gv"]
      }
    ],
    "vim.leader": "<space>",
    "win-ca.inject": "append",
    "window.autoDetectColorScheme": true,
    "window.confirmBeforeClose": "always",
    "workbench.tree.enableStickyScroll": true,
    "workbench.editor.wrapTabs": true,
    // "window.nativeFullScreen": false,
    "window.newWindowDimensions": "maximized",
    "oracledevtools.bookmarkFileFolder": "/Users/jkrueger/Oracle/oracle.oracledevtools",
    "oracledevtools.download.otherFolder": "/Users/jkrueger/downloads",
    "oracledevtools.connectionConfiguration.configFilesFolder": "/Users/jkrueger/Oracle/network/admin",
    "oracledevtools.connectionConfiguration.walletFileFolder": "/Users/jkrueger/Oracle/network/admin",
    "[oraclesql]": {
      "editor.suggest.showSnippets": true,
      "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
      }
    },
    "window.density.editorTabHeight": "compact",
    "editor.acceptSuggestionOnEnter": "on",
    "diffEditor.ignoreTrimWhitespace": true,
    "[vue]": {
      // "editor.defaultFormatter": "Vue.volar"
    },
    "[javascript]": {
